<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="Cucumber" class="org.testmonkeys.cucumber.spring.logging.CucumberScenarioAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <root leve="info">
        <appender-ref ref="Cucumber"/>
    </root>
</configuration>